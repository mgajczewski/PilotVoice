---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div
  class="flex flex-col items-center text-center p-6 rounded-lg bg-card border border-border hover:border-primary/50 transition-colors"
>
  <!-- Icon -->
  <div class="text-4xl mb-4" role="img" aria-label={title}>
    {icon}
  </div>

  <!-- Title -->
  <h3 class="text-xl font-semibold text-foreground mb-3">
    {title}
  </h3>

  <!-- Description -->
  <p class="text-muted-foreground leading-relaxed">
    {description}
  </p>
</div>
