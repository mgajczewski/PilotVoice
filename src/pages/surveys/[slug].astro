---
import Layout from "../../layouts/Layout.astro";
import { SurveyService, SurveyNotFoundError } from "../../lib/services/surveyService";
import { SurveyInfoCard } from "../../components/SurveyInfoCard";
import { SurveyStart } from "../../components/SurveyStart";
import log from "@/lib/logger";

export const prerender = false;

// Get the slug from the URL
const { slug } = Astro.params;

// Validate slug
if (!slug) {
  return Astro.redirect("/404");
}

// Get Supabase client from context
const supabase = Astro.locals.supabase;

// Fetch survey and competition data
let surveyData;
try {
  surveyData = await SurveyService.getSurveyBySlug(slug, supabase);
} catch (error) {
  if (error instanceof SurveyNotFoundError) {
    return Astro.redirect("/404");
  }
  log.error("Error loading survey:", error);
  return Astro.redirect("/500");
}

const { survey, competition } = surveyData;

// Format dates for display
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};

const competitionDates = `${formatDate(competition.starts_at)} - ${formatDate(competition.ends_at)}`;
---

<Layout title={`Survey: ${competition.name}`} description={`Fill out the survey for ${competition.name}`}>
  <div class="container mx-auto px-4 py-8 md:py-12">
    <div class="max-w-2xl mx-auto">
      <SurveyInfoCard client:load title={competition.name} subtitle={competitionDates}>
        <!-- Competition Info -->
        <div class="text-muted-foreground" data-testid="survey-competition-info">
          <p class="flex items-center gap-2">
            <span class="font-medium">Location:</span>
            <span data-testid="survey-competition-location">{competition.city}, {competition.country_code}</span>
          </p>
        </div>

        <!-- Anonymity Information -->
        <div class="rounded-lg bg-muted/50 p-4 border border-border" data-testid="survey-anonymity-info">
          <h3 class="font-semibold mb-2 text-foreground">ðŸ“‹ About the Survey</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">
            Your responses are <strong class="text-foreground">completely anonymous</strong>. Competition organizers
            will not be able to link them to your account. All comments are additionally anonymized using AI to ensure
            full confidentiality.
          </p>
        </div>

        <!-- Survey Start Component (React) -->
        <SurveyStart client:load surveyId={survey.id} surveySlug={slug} />
      </SurveyInfoCard>
    </div>
  </div>
</Layout>
